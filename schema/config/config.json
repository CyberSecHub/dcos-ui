{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "http://schema.mesos/state-01/config",
    "title": "DCOS-UI Config",
    "type": "object",
    "properties" : {
        "uiConfig": {
            "type": "object",
            "properties": {
                "plugins": {
                    "type": "object",
                    "properties": {
                        "banner": {
                            "title": "A banner plugin",
                            "description": "Allows users to have a custom banner in the UI",
                            "type": "object",
                            "properties": {
                                "backgroundColor": {
                                    "title": "Name or hex value of a CSS color",
                                    "type": "string"
                                },
                                "foregroundColor": {
                                    "title": "Name or hex value of a CSS color",
                                    "type": "string"
                                },
                                "content": {
                                    "title": "Content to show in banner",
                                    "type": "string"
                                },
                                "imagePath": {
                                    "title": "Options. A path to an image.",
                                    "type": "string"
                                },
                                "tooltip": {
                                    "title": "Tooltip for content",
                                    "type": "string"
                                }
                            },
                            "required": ["backgroundColor", "foregroundColor", "content"]
                        }
                    }
                }
            },
            "required": ["plugins"]
        }
    },
    "required": ["uiConfig"]
}
