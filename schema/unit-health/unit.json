{
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://schema.dcos/health/unit",
  "type": "object",
  "properties": {
    "unit_id": {
      "title": "Unit ID",
      "type": "string",
      "pattern": "^[\\w]+$"
    },
    "unit_description": {
      "title": "Unit name",
      "type": "string"
    },
    "unit_health": {
      "title": "Node health status",
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "unit_check_output": {
      "title": "Output from health check",
      "description": "Aggregated output from all nodes, will only show the unhealthiest.",
      "type": "string"
    }
  },
  "required": [
    "unit_id",
    "unit_description",
    "unit_health"
  ]
}
