{
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://schema.dcos/health/unit",
  "type": "object",
  "properties": {
    "unit_id": {
      "title": "Unit ID",
      "type": "string",
      "pattern": "^[\\w]+$"
    },
    "unit_title": {
      "title": "Unit Name",
      "type": "string"
    },
    "unit_health": {
      "title": "Node Health Status",
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "unit_output": {
      "title": "Unit Output",
      "description": "Log output.",
      "type": "string"
    },
    "unit_help": {
      "title": "Help Information",
      "description": "Steps a user can take if more information than the unit output is needed.",
      "type": "string"
    }
  },
  "required": [
    "unit_id",
    "unit_title",
    "unit_health"
  ]
}
