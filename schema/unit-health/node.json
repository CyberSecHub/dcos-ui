{
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://schema.dcos/system/health/node",
  "type": "object",
  "properties": {
    "host_ip": {
      "title": "Host IP from ip-detect script",
      "type": "string",
      "pattern": "^[\\w\\.]+$"
    },
    "node_role": {
      "title": "Node Type",
      "type": "string",
      "enum": ["master", "agent", "unknown"]
    },
    "node_health": {
      "title": "Node health status",
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "unit_output": {
      "title": "Node health check output",
      "type": "string"
    }
  },
  "required": [
    "host_ip",
    "node_role",
    "node_health"
  ]
}
