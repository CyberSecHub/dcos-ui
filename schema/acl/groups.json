{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "http://schema.dcos/acl/groups",
    "title": "DCOS ACL: All groups endpoint response",
    "type": "object",
    "properties": {
        "groups": {
            "title": "An array of all the groups",
            "type": "array",
            "items": {
                "title": "A single group",
                "type": "object",
                "properties": {
                    "gid": {
                        "title": "Group's ID",
                        "type": "string"
                    },
                    "url": {
                        "title": "Group's URL",
                        "type": "string"
                    },
                    "description": {
                        "title": "Group's description",
                        "type": "string"
                    }
                },
                "required": [
                    "gid",
                    "url",
                    "description"
                ]
            }
        }
    },
    "required": [
        "groups"
    ]
}
