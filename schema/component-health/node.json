{
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://schema.dcos/system/health/node",
  "type": "object",
  "properties": {
    "node_id": {
      "title": "Node ID",
      "type": "string",
      "pattern": "^[\\w\\.]+$"
    },
    "node_role": {
      "title": "Node Type",
      "type": "string",
      "enum": ["master", "agent"]
    },
    "node_health": {
      "title": "Node health status",
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "component_check_output": {
      "title": "Node health check output",
      "type": "string"
    }
  },
  "required": [
    "node_id",
    "node_role",
    "node_health"
  ]
}
