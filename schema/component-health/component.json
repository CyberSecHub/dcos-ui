{
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://schema.dcos/health/component",
  "type": "object",
  "properties": {
    "id": {
      "title": "Component ID",
      "type": "string",
      "pattern": "^[\\w]+$"
    },
    "name": {
      "title": "Component name",
      "type": "string"
    },
    "version": {
      "title": "Component version",
      "type": "string"
    },
    "health": {
      "title": "Node health status",
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    }
  },
  "required": [
    "id",
    "name",
    "health"
  ]
}
