{
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://schema.dcos/health/component",
  "type": "object",
  "properties": {
    "component_id": {
      "title": "Component ID",
      "type": "string",
      "pattern": "^[\\w]+$"
    },
    "component_description": {
      "title": "Component name",
      "type": "string"
    },
    "component_health": {
      "title": "Node health status",
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "component_check_output": {
      "title": "Output from health check",
      "description": "Aggregated output from all nodes, will only show the unhealthiest.",
      "type": "string"
    }
  },
  "required": [
    "component_id",
    "component_description",
    "component_health",
    "component_check_output"
  ]
}
